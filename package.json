{
  "name": "fhevm-react-template",
  "version": "2.0.0",
  "description": "Universal FHEVM SDK - Framework-agnostic SDK for confidential smart contracts",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "pnpm --filter fhevm-sdk build",
    "build:all": "pnpm --filter \"./packages/**\" build",
    "dev": "pnpm --filter fhevm-sdk dev",
    "test": "pnpm --filter \"./packages/**\" test",
    "test:coverage": "pnpm --filter \"./packages/**\" test --coverage",
    "lint": "eslint \"packages/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"packages/**/*.{ts,tsx}\" \"examples/**/*.{ts,tsx}\" --fix",
    "solhint": "solhint 'contracts/**/*.sol'",
    "solhint:fix": "solhint 'contracts/**/*.sol' --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md,sol}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md,sol}\"",
    "typecheck": "pnpm --filter \"./packages/**\" tsc --noEmit",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/dist examples/*/node_modules",
    "prepare": "husky install",
    "security:audit": "bash scripts/security/audit.sh",
    "security:scan": "pnpm audit --audit-level=moderate",
    "security:dos-check": "bash scripts/security/dos-check.sh",
    "perf:analyze": "bash scripts/performance/analyze.sh",
    "perf:test": "pnpm test --reporter=default --reporter=json",
    "gas:report": "REPORT_GAS=true pnpm hardhat test",
    "size": "pnpm --filter \"./packages/**\" size-limit",
    "validate": "pnpm lint && pnpm typecheck && pnpm test",
    "pre-commit": "pnpm format:check && pnpm lint && pnpm typecheck",
    "pre-push": "pnpm test && pnpm build"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "zama",
    "confidential",
    "privacy",
    "blockchain",
    "ethereum",
    "web3",
    "sdk",
    "react",
    "vue",
    "nextjs"
  ],
  "author": "Your Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/fhevm-react-template.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/fhevm-react-template/issues"
  },
  "homepage": "https://github.com/yourusername/fhevm-react-template#readme",
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^9.0.0",
    "prettier": "^3.3.2",
    "prettier-plugin-solidity": "^1.3.1",
    "solhint": "^4.5.0",
    "solhint-plugin-prettier": "^0.1.0",
    "hardhat": "^2.20.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.0",
    "hardhat-gas-reporter": "^2.0.0",
    "hardhat-contract-sizer": "^2.10.0",
    "solidity-coverage": "^0.8.5",
    "turbo": "^2.0.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
