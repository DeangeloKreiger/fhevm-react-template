#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running pre-commit checks..."

# Run linters
echo "ğŸ“ Checking code formatting with Prettier..."
pnpm prettier --check "**/*.{ts,tsx,js,jsx,json,md,sol}" || {
  echo "âŒ Prettier check failed. Run 'pnpm format' to fix."
  exit 1
}

echo "ğŸ” Running ESLint..."
pnpm eslint "packages/**/*.{ts,tsx}" "examples/**/*.{ts,tsx}" --max-warnings 0 || {
  echo "âŒ ESLint check failed. Please fix the errors."
  exit 1
}

# Check for Solidity files
if git diff --cached --name-only | grep -q "\.sol$"; then
  echo "ğŸ” Running Solhint on Solidity files..."
  pnpm solhint 'contracts/**/*.sol' || {
    echo "âŒ Solhint check failed. Please fix the errors."
    exit 1
  }
fi

# Type checking
echo "ğŸ” Running TypeScript type check..."
pnpm typecheck || {
  echo "âŒ TypeScript type check failed."
  exit 1
}

# Security checks
echo "ğŸ”’ Running security audit..."
pnpm audit --audit-level=moderate || {
  echo "âš ï¸  Security vulnerabilities found. Please review."
}

echo "âœ… All pre-commit checks passed!"
