# ================================
# FHEVM SDK Configuration
# ================================

# Network Configuration
NODE_ENV=development
NETWORK=sepolia

# RPC Endpoints
SEPOLIA_RPC_URL=https://rpc.sepolia.org
MAINNET_RPC_URL=https://eth.llamarpc.com
LOCAL_RPC_URL=http://localhost:8545

# FHEVM Gateway
GATEWAY_URL=https://gateway.zama.ai
GATEWAY_API_KEY=

# Contract Addresses
NEXT_PUBLIC_CONTRACT_ADDRESS=0xD90c73b42952565F334E5FB6C349B0005ac06669
CONTRACT_ADDRESS=0xD90c73b42952565F334E5FB6C349B0005ac06669

# ================================
# Wallet & Security
# ================================

# Private Keys (NEVER commit real keys!)
PRIVATE_KEY=
MNEMONIC=test test test test test test test test test test test junk

# Pauser Configuration (for pausable contracts)
PAUSER_ADDRESS=
PAUSER_PRIVATE_KEY=

# Multi-sig Configuration
MULTISIG_ADDRESS=
MULTISIG_THRESHOLD=2

# ================================
# API Keys & Services
# ================================

# Etherscan Verification
ETHERSCAN_API_KEY=
POLYGONSCAN_API_KEY=

# Gas Price Oracles
COINMARKETCAP_API_KEY=
GAS_STATION_API_KEY=

# Infrastructure
INFURA_API_KEY=
ALCHEMY_API_KEY=

# Analytics
TENDERLY_PROJECT=
TENDERLY_USERNAME=
TENDERLY_ACCESS_KEY=

# ================================
# Development & Testing
# ================================

# Test Configuration
TEST_TIMEOUT=40000
TEST_ACCOUNT_MNEMONIC=test test test test test test test test test test test junk

# Gas Configuration
GAS_LIMIT=8000000
GAS_PRICE=auto

# ================================
# Performance & Optimization
# ================================

# Gas Reporting
REPORT_GAS=true
GAS_REPORT_FILE=gas-report.txt

# Code Splitting
NEXT_PUBLIC_ENABLE_CODE_SPLITTING=true
NEXT_PUBLIC_CHUNK_SIZE_LIMIT=244000

# Caching
NEXT_PUBLIC_ENABLE_CACHE=true
CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100

# ================================
# Security Configuration
# ================================

# CORS Settings
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
CORS_ENABLED=true

# DoS Protection
MAX_REQUEST_SIZE=10mb
REQUEST_TIMEOUT=30000
MAX_CONCURRENT_REQUESTS=100

# Input Validation
MAX_INPUT_LENGTH=1000
VALIDATE_INPUTS=true

# Rate Limiting (API Routes)
API_RATE_LIMIT=100
API_RATE_WINDOW=60000

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_ENABLED=true

# ================================
# Monitoring & Logging
# ================================

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
ENABLE_CONSOLE_LOGS=true

# Error Tracking
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Performance Monitoring
ENABLE_PERFORMANCE_MONITORING=true
LIGHTHOUSE_CI_TOKEN=

# ================================
# Database (if applicable)
# ================================

DATABASE_URL=
REDIS_URL=

# ================================
# Frontend Configuration
# ================================

# Next.js Public Variables
NEXT_PUBLIC_APP_NAME=FHEVM SDK
NEXT_PUBLIC_APP_VERSION=2.0.0
NEXT_PUBLIC_NETWORK=sepolia
NEXT_PUBLIC_GATEWAY_URL=https://gateway.zama.ai

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=false
NEXT_PUBLIC_ENABLE_TESTNET=true

# UI Configuration
NEXT_PUBLIC_THEME=dark
NEXT_PUBLIC_LOCALE=en

# ================================
# CI/CD Configuration
# ================================

# GitHub Actions
CI=true
GITHUB_TOKEN=

# Deployment
DEPLOY_NETWORK=sepolia
DEPLOY_VERIFY=true

# Build Configuration
BUILD_TIMESTAMP=
BUILD_HASH=

# ================================
# Smart Contract Configuration
# ================================

# Compiler Settings
SOLC_VERSION=0.8.24
OPTIMIZER_ENABLED=true
OPTIMIZER_RUNS=200

# Deployment Configuration
CONSTRUCTOR_ARGS=[]
DEPLOY_GAS_LIMIT=8000000

# Verification
VERIFY_CONTRACTS=true
VERIFICATION_DELAY=30000

# ================================
# Testing & Quality Assurance
# ================================

# Coverage
COVERAGE_THRESHOLD=80
ENABLE_COVERAGE=true

# Linting
ESLINT_ENABLED=true
SOLHINT_ENABLED=true
PRETTIER_ENABLED=true

# Security Auditing
SECURITY_AUDIT_ENABLED=true
SLITHER_ENABLED=false
MYTHRIL_ENABLED=false

# ================================
# Advanced Configuration
# ================================

# WebSocket
WS_ENABLED=false
WS_PORT=8546

# GraphQL (if using The Graph)
GRAPH_API_URL=
SUBGRAPH_NAME=

# IPFS
IPFS_GATEWAY=https://ipfs.io
PINATA_API_KEY=
PINATA_SECRET_KEY=

# ================================
# Notes
# ================================

# 1. Copy this file to .env for local development
# 2. NEVER commit .env file to version control
# 3. Update values according to your environment
# 4. Use strong, unique keys for production
# 5. Rotate keys regularly
# 6. Keep pauser keys in secure key management system
# 7. Enable rate limiting in production
# 8. Configure proper CORS for production
# 9. Use environment-specific .env files (.env.production, .env.staging)
# 10. Document any custom variables added
